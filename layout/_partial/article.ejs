<article class="<%= item.layout %>">
  <% if (item.photos){ %>
    <%- partial('post/gallery') %>
  <% } %>
  <div class="post-content">
    <header>
      <% if (item.layout != 'page'){ %>
      <%- partial('post/title') %>
      <% } %>
    </header>
    <div class="entry">
      <% if (item.excerpt && index){ %>
        <%- item.excerpt %>
      <% } else { %>
        <%- item.content %>
      <% } %>
      <% if (path != 'about/index.html'){ %>
      <p style="text-align: center;" >
        <a href="http://sanyuesha.com/images/qrcode_for_gh_c28573fbafaa_344.jpg" title="" class="fancybox" rel="gallery0">
          <img src="/images/qrcode_for_gh_c28573fbafaa_344.jpg" width="200">
        </a>
      </p>
      <p style="text-align: center;" >关注 wecatch 公众号, 获取最新文章信息</p>
      <% } %>
    </div>
    <footer>
      <% if (index){ %>
        <div class="alignleft">
            <a href="<%- config.root %><%- item.path %>#more" class="more-link"><i class="fa fa-chevron-right"></i><%= theme.excerpt_link %></a>
        </div>
        <% if (item.comment && config.disqus_shortname){ %>
          <div class="alignleft">
            <a href="<%- item.permalink %>#disqus_thread" class="comment-link">Comments</a>
          </div>
        <% } %>
        <% if (theme.comment_provider == "duoshuo"){ %>
          <div class="alignright"> 
            <a href="<%- item.permalink %>#comment" class="comment-link">
              <i class="fa fa-comments"></i><span class="ds-thread-count" data-thread-key="<%- config.root %><%- item.path%>">&nbsp;
              </span>
            </a>
          </div>
        <% } %>
      <% } else { %>
          <%- partial('post/share') %>
          <div class="clearfix"></div>
          <%- partial('_partial/pagination', {article: true}) %>
      <% } %>
      <div class="clearfix"></div>
    </footer>
  </div>
</article>

<%- partial('comment') %>
